generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id             String         @id @default(cuid())
  name           String?
  email          String?        @unique
  emailVerified  DateTime?
  image          String?
  role           String         @default("ESTUDIANTE")
  companyId      String?
  createdAt      DateTime       @default(now())
  isCompanyAdmin Boolean        @default(false)
  password       String?
  telegram       String?
  telegramVerified Boolean      @default(false)
  updatedAt      DateTime       @updatedAt
  accounts       Account[]
  purchases      Purchase[]
  sessions       Session[]
  subscriptions  Subscription[]
  notifications  Notification[]
  notificationPrefs Json?        @default("{\"telegram\": true, \"inApp\": true}")
  company        Company?       @relation(fields: [companyId], references: [id])
  progress       UserProgress[]
  reviews        Review[]
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  type      String   @default("INFO") // INFO, SUCCESS, WARNING, COURSE
  read      Boolean  @default(false)
  url       String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserProgress {
  id             String   @id @default(cuid())
  userId         String
  lessonId       String
  completed      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastPlayedTime Int      @default(0)
  lesson         Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id               String     @id @default(cuid())
  title            String
  description      String?
  price            Decimal
  discount         Int?       @default(0)
  imageUrl         String?
  category         String     @default("General")
  level            String     @default("Todos los niveles")
  type             String     @default("COURSE") // COURSE, MENTORSHIP, MICRO_COURSE
  published        Boolean    @default(false)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  learningOutcomes String?
  shortDescription String?
  modules          Module[]
  purchases        Purchase[]
  bundles          Bundle[]   @relation("BundleToCourse")
  reviews          Review[]
}

model Bundle {
  id            String           @id @default(cuid())
  title         String
  description   String?
  price         Decimal
  imageUrl      String?
  published     Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  items         MembershipItem[]
  purchases     Purchase[]
  subscriptions Subscription[]
  courses       Course[]         @relation("BundleToCourse")
}

model MembershipItem {
  id        String   @id @default(cuid())
  bundleId  String
  name      String
  content   String?
  type      String   @default("LINK")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bundle    Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@index([bundleId])
}

model Subscription {
  id            String   @id @default(cuid())
  userId        String
  bundleId      String
  mercadoPagoId String   @unique
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  bundle        Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bundleId])
}

model Module {
  id        String   @id @default(cuid())
  title     String
  position  Int
  courseId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lessons   Lesson[]
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
}

model Lesson {
  id          String         @id @default(cuid())
  title       String
  description String?
  videoUrl    String?
  duration    Int            @default(0)
  content     String?
  position    Int
  published   Boolean        @default(false)
  moduleId    String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  module      Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  resources   Resource[]
  progress    UserProgress[]
  quiz        Quiz?
  
  @@index([moduleId])
}

model Quiz {
  id            String   @id @default(cuid())
  question      String
  options       String[]
  correctOption Int
  lesson        Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  lessonId      String   @unique

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@index([lessonId])
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  url       String
  type      String   @default("PDF")
  lessonId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@index([lessonId])
}

model Purchase {
  id           String   @id @default(cuid())
  userId       String
  courseId     String?
  amount       Decimal
  status       String
  paymentId    String?
  preferenceId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bundleId     String?
  couponId     String?
  bundle       Bundle?  @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  coupon       Coupon?  @relation(fields: [couponId], references: [id])
  course       Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
  @@index([bundleId])
  @@index([couponId])
}

model Coupon {
  id        String     @id @default(cuid())
  code      String     @unique
  discount  Decimal
  type      String     @default("PERCENTAGE")
  expiresAt DateTime?
  limit     Int?
  used      Int        @default(0)
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  purchases Purchase[]
}

model Company {
  id         String   @id @default(cuid())
  name       String
  logo       String?
  domain     String?
  accessCode String   @unique
  maxSeats   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  users      User[]
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  companyName String
  email       String
  phone       String?
  employees   String
  status      String   @default("NEW")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?  // Removed @db.Text as it might strict validation issues, String is enough for Prisma default
  userId    String
  courseId  String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([userId])
}

model SalesGoal {
  id           String   @id @default(cuid())
  targetAmount Decimal  @default(5000000)
  deadline     DateTime
  startDate    DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
