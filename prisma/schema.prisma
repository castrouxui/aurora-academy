generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                String         @id @default(cuid())
  name              String?
  email             String?        @unique
  emailVerified     DateTime?
  image             String?
  role              String         @default("ESTUDIANTE")
  companyId         String?
  createdAt         DateTime       @default(now())
  isCompanyAdmin    Boolean        @default(false)
  updatedAt         DateTime       @updatedAt
  telegram          String?
  telegramVerified  Boolean        @default(false)
  password          String?
  notificationPrefs Json?          @default("{\"inApp\": true, \"telegram\": true}")
  accounts          Account[]
  notifications     Notification[]
  purchases         Purchase[]
  reviews           Review[]
  sessions          Session[]
  subscriptions     Subscription[]
  company           Company?       @relation(fields: [companyId], references: [id])
  progress          UserProgress[]
  rewards           UserReward[]
  userCareers       UserCareer[]
}

model UserReward {
  id         String   @id @default(cuid())
  userId     String
  courseId   String
  rewardType String
  rewardId   String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, courseId, rewardType])
  @@index([userId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  title     String
  content   String
  type      String   @default("INFO")
  read      Boolean  @default(false)
  url       String?
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model UserProgress {
  id             String   @id @default(cuid())
  userId         String
  lessonId       String
  completed      Boolean  @default(true)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  lastPlayedTime Int      @default(0)
  lesson         Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, lessonId])
  @@index([userId])
  @@index([lessonId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Course {
  id               String     @id @default(cuid())
  title            String
  description      String?
  price            Decimal
  imageUrl         String?
  category         String     @default("General")
  level            String     @default("Todos los niveles")
  published        Boolean    @default(false)
  createdAt        DateTime   @default(now())
  updatedAt        DateTime   @updatedAt
  learningOutcomes String?
  shortDescription String?
  discount         Int?       @default(0)
  type             String     @default("COURSE")
  modules          Module[]
  purchases        Purchase[]
  reviews          Review[]
  bundles          Bundle[]   @relation("BundleToCourse")
}

model Bundle {
  id            String           @id @default(cuid())
  title         String
  description   String?
  price         Decimal
  imageUrl      String?
  published     Boolean          @default(false)
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  items         MembershipItem[]
  purchases     Purchase[]
  subscriptions Subscription[]
  courses       Course[]         @relation("BundleToCourse")
  companies     Company[]
}

model MembershipItem {
  id        String   @id @default(cuid())
  bundleId  String
  name      String
  content   String?
  type      String   @default("LINK")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  bundle    Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)

  @@index([bundleId])
}

model Subscription {
  id            String   @id @default(cuid())
  userId        String
  bundleId      String
  mercadoPagoId String   @unique
  status        String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  bundle        Bundle   @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([bundleId])
}

model Module {
  id        String   @id @default(cuid())
  title     String
  position  Int
  courseId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lessons   Lesson[]
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
}

model Lesson {
  id          String         @id @default(cuid())
  title       String
  description String?
  videoUrl    String?
  duration    Int            @default(0)
  content     String?
  position    Int
  published   Boolean        @default(false)
  moduleId    String
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  module      Module         @relation(fields: [moduleId], references: [id], onDelete: Cascade)
  quiz        Quiz?
  resources   Resource[]
  progress    UserProgress[]

  @@index([moduleId])
}

model Quiz {
  id            String   @id @default(cuid())
  question      String
  options       String[]
  correctOption Int
  lessonId      String   @unique
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  lesson        Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@index([lessonId])
}

model Resource {
  id        String   @id @default(cuid())
  title     String
  url       String
  type      String   @default("PDF")
  lessonId  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)

  @@index([lessonId])
}

model Purchase {
  id           String   @id @default(cuid())
  userId       String
  courseId     String?
  amount       Decimal
  status       String
  paymentId    String?
  preferenceId String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  bundleId     String?
  couponId     String?
  productName  String?
  bundle       Bundle?  @relation(fields: [bundleId], references: [id], onDelete: Cascade)
  coupon       Coupon?  @relation(fields: [couponId], references: [id])
  course       Course?  @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
  @@index([bundleId])
  @@index([couponId])
}

model Coupon {
  id        String     @id @default(cuid())
  code      String     @unique
  discount  Decimal
  type      String     @default("PERCENTAGE")
  expiresAt DateTime?
  limit     Int?
  used      Int        @default(0)
  active    Boolean    @default(true)
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  purchases Purchase[]
}

model Company {
  id         String   @id @default(cuid())
  name       String
  logo       String?
  domain     String?
  accessCode String   @unique
  maxSeats   Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  bundleId   String?
  expiresAt  DateTime?
  bundle     Bundle?  @relation(fields: [bundleId], references: [id])
  users      User[]
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  companyName String
  email       String
  phone       String?
  employees   String
  status      String   @default("NEW")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?
  userId    String
  courseId  String
  createdAt DateTime @default(now())
  course    Course   @relation(fields: [courseId], references: [id], onDelete: Cascade)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([courseId])
  @@index([userId])
}

model SalesGoal {
  id           String   @id @default(cuid())
  targetAmount Decimal  @default(5000000)
  deadline     DateTime
  startDate    DateTime @default(now())
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Expense {
  id        String   @id @default(cuid())
  label     String
  amount    Decimal
  date      DateTime @default(now())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Career {
  id          String   @id @default(cuid())
  name        String
  referenceId String   @unique // e.g. "career-trader-100"
  description String?
  published   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  milestones  CareerMilestone[]
  userCareers UserCareer[]
}

model CareerMilestone {
  id        String   @id @default(cuid())
  careerId  String
  courseId  String?  // Optional if type is SUBSCRIPTION
  type      String   // "COURSE", "SUBSCRIPTION"
  position  Int
  career    Career   @relation(fields: [careerId], references: [id], onDelete: Cascade)

  @@index([careerId])
}

model UserCareer {
  id          String   @id @default(cuid())
  userId      String
  careerId    String
  progress    Int      @default(0) // 0-100
  status      String   @default("IN_PROGRESS") // IN_PROGRESS, COMPLETED
  lastSyncAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  career      Career   @relation(fields: [careerId], references: [id], onDelete: Cascade)

  @@unique([userId, careerId])
  @@index([userId])
}
